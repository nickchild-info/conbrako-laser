# Production Environment Configuration
# Copy this file to .env and fill in your production values

# App Configuration
DEBUG=false
APP_NAME="KoosDoos Fire Pits API"
API_V1_PREFIX=/api/v1

# Database - Use your production PostgreSQL URL
# Railway: postgres://user:pass@host.railway.app:5432/railway
# Supabase: postgresql://postgres:pass@host.supabase.co:5432/postgres
# Neon: postgresql://user:pass@host.neon.tech/dbname
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS - Production frontend URL
CORS_ORIGINS=["https://koosdoos.co.za","https://www.koosdoos.co.za"]

# Stripe Production Keys
# Get from https://dashboard.stripe.com/apikeys (not test mode)
STRIPE_SECRET_KEY=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Admin API Key - CHANGE THIS IN PRODUCTION!
ADMIN_API_KEY=your-secure-admin-api-key-here

# S3/Storage - for custom design uploads
# Using AWS S3
S3_BUCKET=koosdoos-uploads
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_REGION=af-south-1

# Or using DigitalOcean Spaces
# S3_BUCKET=koosdoos-uploads
# S3_ACCESS_KEY=your-do-access-key
# S3_SECRET_KEY=your-do-secret-key
# S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# Sentry Error Monitoring (optional)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Logging
LOG_LEVEL=INFO
